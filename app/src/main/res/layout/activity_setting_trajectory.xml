<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/close" 
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_panel_relative_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="220dp">

            <TextView
                android:id="@+id/tvtext"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="@string/text_setting_location_track_interval"
                android:textColor="@color/text_color_90white"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/rlSet"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/tvtext"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlAdd"
                    android:layout_width="70dp"
                    android:layout_height="22dp">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="12dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_three_top" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_panel_fang">

                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/text_setting_location_track_seconds"
                        android:textColor="@color/text_color_90white"
                        android:textSize="16dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlReduce"
                    android:layout_width="70dp"
                    android:layout_height="22dp">


                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="12dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_three_botton" />

                </RelativeLayout>


            </LinearLayout>

            <CheckBox
                android:id="@+id/cbSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvtext"
                android:text="@string/checkbox_setting_location_track_save"
                android:textColor="@color/text_color_90white"
                android:textSize="13dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSure"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_panel_btn"
                android:gravity="center"
                android:text="@string/button_confirm"
                android:textSize="16dp"
                android:textColor="@color/text_color_90white"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
