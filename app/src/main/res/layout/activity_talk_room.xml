<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_icon"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_return"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="返回"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/icon_return"
            android:paddingLeft="13dp"
            />
            
        <com.luobin.widget.FirstStatusBar
        	android:id="@+id/statusBar"
            android:layout_width="192dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/btn_return"
            android:background="@drawable/bg_selector"/>

       <com.luobin.widget.FirstActionBarDataView
        	android:id="@+id/timebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/statusBar"
            android:background="@drawable/bg_selector"
            />    


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/border_color"
        />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            
            <ImageView
                android:id="@+id/prefix_camera"
                android:layout_width="119dp"
                android:layout_height="97dp"
                android:scaleType="fitXY"
                android:background="@drawable/icon_video"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="19dp"
                />

            <ImageView
                android:id="@+id/voice"
                android:layout_width="61dp"
                android:layout_height="97dp"
                android:background="@drawable/icon_mac"
                android:layout_toRightOf="@id/prefix_camera"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="21dp"
                />

            <Button
                android:id="@+id/goto_map"
                android:layout_width="119dp"
                android:layout_height="38dp"
                android:background="@drawable/button_selector"
                android:textSize="16dp"
                android:text="地图查看"
                android:textColor="@color/white"
                android:layout_marginTop="21dp"
                android:layout_below="@id/prefix_camera"
                android:layout_marginLeft="19dp"
                />

            <Button
                android:id="@+id/do_not_disturb"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:background="@drawable/button_selector"
                android:textSize="16dp"
                android:text="免打扰"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:layout_below="@id/prefix_camera"
                android:layout_toRightOf="@id/goto_map"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19dp"
                android:layout_marginBottom="18dp"
                />


            <TextView
                android:id="@+id/num_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/name"
                android:layout_marginBottom="18dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="47dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/button_selector"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="12dp" />


              <!--  <Button
                    android:layout_width="47dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bg_button"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="删除"
                    android:layout_toLeftOf="@id/btn_add"
                    android:layout_marginRight="10dp"
                    />-->

            </RelativeLayout>

            <ListView
                android:id="@+id/member_list"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>