<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    
  >

    <LinearLayout
        android:id="@+id/time_view"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_selector"
        >

        <TextView android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_height"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_height"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_height"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/time4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_height"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"/>

        <TextView android:id="@+id/time5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_height"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_selector"
        >

        <TextView android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="14dp"/>

        <!--TextView android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="14dp" /-->

    </LinearLayout>


   <!--com.luobin.widget.StatusBar
