<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_video_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusUp="@+id/rl_voice_call"
        android:nextFocusDown="@+id/rl_voice_call"
        android:background="@drawable/pop_stroke_bg">

        <Button
            android:id="@+id/video_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/video_call"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_voice_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:nextFocusUp="@+id/rl_video_call"
        android:nextFocusDown="@+id/rl_video_call"
        android:background="@drawable/pop_stroke_bg">

        <Button
            android:id="@+id/voice_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/voice_call"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>