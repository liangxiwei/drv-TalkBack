<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002c70"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/xbg_rect_panel"
        android:orientation="horizontal"
        >

        <!--com.luobin.widget.ActionBarDataView2
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            /-->
       	<LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
        >
	        <com.luobin.widget.ActionBarDataViewDvrMain
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/bg_selector"
	            />

	       <com.luobin.widget.StatusBar
		       android:layout_width="160dp"
		       android:layout_height="25dp"
		       android:layout_marginLeft="10dp"
		       android:layout_marginTop="10dp"
		       android:background="@drawable/bg_selector"
	       />
	   </LinearLayout>    


        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btnBack"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_panel_setting"
                android:drawableLeft="@mipmap/setting_back_icon"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:text="返回"
                android:textColor="@color/text_color_90white"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>


    <GridView
        android:id="@+id/gvItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/bg_panel_relative_layout"
        android:numColumns="4"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingTop="5dp" />

</LinearLayout>
