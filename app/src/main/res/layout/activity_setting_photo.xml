<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/close" />

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_panel_relative_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="220dp">

                <TextView
                    android:id="@+id/tvtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="连拍"
                    android:textColor="@color/text_color_90white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/rlSet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/tvtext1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlAddSet"
                        android:layout_width="70dp"
                        android:layout_height="22dp">

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_three_top" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_panel_fang">

                        <TextView
                            android:id="@+id/tvNumSet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/text_color_90white"
                            android:textSize="16dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlReduceSet"
                        android:layout_width="70dp"
                        android:layout_height="22dp">


                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_three_botton" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/rlSet"
                    android:gravity="center|left"
                    android:text="张"
                    android:textColor="@color/text_color_90white"
                    android:textSize="16dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="220dp">

                <TextView
                    android:id="@+id/tvtext"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="连拍间隔"
                    android:textColor="@color/text_color_90white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/rlSetTime"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/tvtext"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlAddTime"
                        android:layout_width="70dp"
                        android:layout_height="22dp">

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_three_top" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_panel_fang">

                        <TextView
                            android:id="@+id/tvNumTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="10秒"
                            android:textColor="@color/text_color_90white"
                            android:textSize="16dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlReduceTime"
                        android:layout_width="70dp"
                        android:layout_height="22dp">


                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_three_botton" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/rlSetTime"
                    android:gravity="center|left"
                    android:text="张"
                    android:textColor="@color/text_color_90white"
                    android:textSize="16dp" />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSure"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_panel_btn"
                android:gravity="center"
                android:text="确定"
                android:textSize="16dp" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
