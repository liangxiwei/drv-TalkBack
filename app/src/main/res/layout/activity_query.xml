<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/close" />

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="274dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_panel_relative_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:gravity="center">


            <EditText
                android:id="@+id/edID"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:hint="输入ID,可查询ID上传的所有路线"
                android:textSize="15dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tvName"
                android:background="@drawable/bg_panel_edittext"
                android:inputType="number"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAddress"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/rlID"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <EditText
                android:id="@+id/edAddress"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:hint="输入地名,用空格隔开"
                android:textSize="15dp"
                android:layout_toEndOf="@+id/tvPass"
                android:background="@drawable/bg_panel_edittext"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </RelativeLayout>


            <TextView
                android:id="@+id/tvQuery"
                android:layout_alignParentBottom="true"
                android:layout_width="80dp"
                android:layout_marginBottom="10dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:text="查询"
                android:gravity="center"
                android:background="@drawable/bg_panel_setting"
                android:textColor="#ffffffff"
                android:textSize="16dp" />


    </RelativeLayout>


</RelativeLayout>
