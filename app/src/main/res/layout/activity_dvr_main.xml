<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stroke_talk"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

		<LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
        >
	        <com.luobin.widget.ActionBarDataViewDvrMain
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/bg_selector"
	            />

	       <com.luobin.widget.StatusBar
		       android:layout_width="160dp"
		       android:layout_height="25dp"
		       android:layout_marginLeft="10dp"
		       android:layout_marginTop="10dp"
		       android:background="@drawable/bg_selector"
	       />
	   </LinearLayout>    

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/actionbar_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_selector"
                >

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="44dp"
                    android:background="@drawable/message_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorWirte"
                    android:text="消息"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/actionbar_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
		android:background="@drawable/bg_selector"
                >

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="44dp"
                    android:background="@drawable/add_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorWirte"
                    android:text="创建群组"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/actionbar_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_selector"
                >

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="44dp"
                    android:background="@drawable/search_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/colorWirte"
                    android:text="搜索"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="end"
            >

            <Button
                android:id="@+id/btn_change"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_selector"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="通讯录"
                />

            <Button
                android:id="@+id/btn_return"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="返回"
                android:background="@drawable/button_selector"
                android:drawableLeft="@drawable/icon_return"
                android:paddingLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_change"
                />

        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/border_color"
        />

    <FrameLayout
        android:id="@+id/frame_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>